<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.TodoMapper">

	<select id="selectIncomplete"
		resultType="com.example.demo.domain.model.Todo">
		SELECT * FROM todo_items WHERE done_flg = 0
	</select>

	<select id="selectComplete"
		resultType="com.example.demo.domain.model.Todo">
		SELECT * FROM todo_items WHERE done_flg = 1
	</select>

</mapper>